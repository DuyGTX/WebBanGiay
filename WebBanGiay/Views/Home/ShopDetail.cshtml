<script>
    $(document).ready(function () {
        // Xử lý chọn size
        $('.size-option input[type="radio"]').on('change', function () {
            const $label = $(this).closest('label');
            const sizeId = $label.data('size-id');
            const price = $label.data('price');

            // Cập nhật active class
            $('.size-option').removeClass('active');
            $label.addClass('active');

            // Cập nhật giá hiển thị
            $('#product-price').text(formatPrice(price) + ' VNĐ');

            // Cập nhật hidden input cho form (nếu cần)
            $('#SelectedSizeId').val(sizeId);
        });

        // Format giá tiền
        function formatPrice(price) {
            return new Intl.NumberFormat('vi-VN').format(price);
        }

        // Tự động chọn size đầu tiên
        $('.size-option input[type="radio"]:first').prop('checked', true).trigger('change');
    });
</script>