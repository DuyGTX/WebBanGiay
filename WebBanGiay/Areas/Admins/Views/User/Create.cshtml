
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.EntityFrameworkCore;
@using WebBanGiay.Models;
@model AppUserModel;

@{
	Layout = "~/Views/Shared/header-footer-admin.cshtml";
	<script defer src="~/assets/plugins/fontawesome/js/all.min.js"></script>

	<!-- App CSS -->
	<link id="theme-style" rel="stylesheet" href="~/assets/css/portal.css">
	<link id="style" rel="stylesheet" href="~/css/site.css">
	<!-- Javascript -->
	<script src="~/assets/plugins/popper.min.js"></script>
	<script src="~/assets/plugins/bootstrap/js/bootstrap.min.js"></script>

	<!-- Page Specific JS -->
	<script src="~/assets/js/app.js"></script>
}
<body class="app">
	<div class="app-wrapper">
		@Html.Partial("_NotificationPartial")
		<div class="app-content pt-3 p-md-3 p-lg-4">
			<div class="container-xl">
				<h1 class="app-page-title">Tạo User</h1>
				<hr class="mb-4">
				<div class="row g-4 settings-section">


					<div class="app-card app-card-settings shadow-sm p-4">

						<div class="app-card-body">
							<form class="settings-form" method="post" enctype="multipart/form-data">
								


								<div class="row mb-3">
									<label for="setting-input-1" class="form-label">
										UserName<span class="ms-2" data-bs-container="body" data-bs-toggle="popover" data-bs-trigger="hover focus" data-bs-placement="top" data-bs-content="Không vượt quá 100 ký tự.">
											<svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-info-circle" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
												<path fill-rule="evenodd" d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
												<path d="M8.93 6.588l-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533L8.93 6.588z" />
												<circle cx="8" cy="4.5" r="1" />
											</svg>
										</span>
									</label>

									<input asp-for="UserName" type="text" class="form-control" id="setting-input-1" required>
									<span asp-validation-for="UserName" class="text-danger"></span>
								</div>
								<div class="row mb-3">
									<label for="setting-input-1" class="form-label">
										Email<span class="ms-2" data-bs-container="body" data-bs-toggle="popover" data-bs-trigger="hover focus" data-bs-placement="top" data-bs-content="Không vượt quá 100 ký tự.">
											<svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-info-circle" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
												<path fill-rule="evenodd" d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
												<path d="M8.93 6.588l-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533L8.93 6.588z" />
												<circle cx="8" cy="4.5" r="1" />
											</svg>
										</span>
									</label>

									<input asp-for="Email" type="text" class="form-control" id="setting-input-1" required>
									<span asp-validation-for="Email" class="text-danger"></span>
								</div>
								<div class="row mb-3">
									<label for="setting-input-1" class="form-label">
										Phone Number<span class="ms-2" data-bs-container="body" data-bs-toggle="popover" data-bs-trigger="hover focus" data-bs-placement="top" data-bs-content="Không vượt quá 100 ký tự.">
											<svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-info-circle" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
												<path fill-rule="evenodd" d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
												<path d="M8.93 6.588l-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533L8.93 6.588z" />
												<circle cx="8" cy="4.5" r="1" />
											</svg>
										</span>
									</label>

									<input asp-for="PhoneNumber" type="text" class="form-control" id="setting-input-1" required>
									<span asp-validation-for="PhoneNumber" class="text-danger"></span>
								</div>
								<div class="row mb-3">
									<label for="setting-input-1" class="form-label">
										Password<span class="ms-2" data-bs-container="body" data-bs-toggle="popover" data-bs-trigger="hover focus" data-bs-placement="top" data-bs-content="Không vượt quá 100 ký tự.">
											<svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-info-circle" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
												<path fill-rule="evenodd" d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
												<path d="M8.93 6.588l-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533L8.93 6.588z" />
												<circle cx="8" cy="4.5" r="1" />
											</svg>
										</span>
									</label>

									<input asp-for="PasswordHash" type="text" class="form-control" id="setting-input-1" required>
									<span asp-validation-for="PasswordHash" class="text-danger"></span>
								</div>
								<div class="row mb-3">
									<label for="setting-input-1" class="form-label">
										Roles<span class="ms-2" data-bs-container="body" data-bs-toggle="popover" data-bs-trigger="hover focus" data-bs-placement="top" data-bs-content="Không vượt quá 100 ký tự.">
											<svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-info-circle" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
												<path fill-rule="evenodd" d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
												<path d="M8.93 6.588l-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533L8.93 6.588z" />
												<circle cx="8" cy="4.5" r="1" />
											</svg>
										</span>
									</label>
									<select asp-for="RoleId" class="form-control" asp-items="ViewBag.Roles">
									
									</select>
									<span asp-validation-for="RoleId" class="text-danger"></span>
								</div>
								<div class="row justify-content-center">
									<div class="col-sm-2 d-grid">
										<button type="submit" class="btn btn-sm app-btn-primary">Xác nhận</button>
									</div>
									<div class="col-sm-2 d-grid">
										<a asp-area="Admins" asp-controller="User" asp-action="Index"
										   class="btn btn-sm app-btn-primary"
										   style="background: #d26d69; color: #fff; border-color: #d26d69;" role="button">
											Hủy
										</a>
									</div>
								</div>


							</form>
						</div><!--//app-card-body-->

					</div><!--//app-card-->

				</div><!--//row-->

			</div><!--//container-fluid-->
		</div><!--//app-content-->
	</div><!--//app-content-->
</body>
